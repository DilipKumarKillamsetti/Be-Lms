<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_8dp"
            android:layout_marginBottom="@dimen/margin_size_8dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_eu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_size_3dp"
                android:background="@drawable/new_grey_bg">
                <ImageView
                    android:id="@+id/iv_tranning_cal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_news"
                     />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_size_8dp"

                    android:text="Excellence Update"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_lh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_size_3dp"
                android:background="@drawable/new_grey_bg">

                <ImageView
                    android:id="@+id/iv_Profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_learning_hub"
               />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_size_8dp"
                    android:text="Learning Hub"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_not"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_size_3dp"
                android:background="@drawable/new_grey_bg">

                <ImageView
                    android:id="@+id/iv_test_skills"
                    android:layout_width="40dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icn_notification_alfa_50"
                    android:layout_weight="0.12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_size_8dp"
                    android:layout_weight="1"
                    android:text="Notifications"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ibms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_size_3dp"
                android:background="@drawable/new_grey_bg">

                <ImageView
                    android:id="@+id/iv_feedback"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|bottom"
                    android:src="@drawable/icn_security_alfa_50"
                     />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_size_8dp"
                    android:layout_weight="1"
                    android:text="IBMS"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>

