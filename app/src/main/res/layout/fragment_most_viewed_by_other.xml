<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mahindra.be_lms.fragments.MostViewedByOtherFragment">

    <TextView
        android:id="@+id/tvMostViewedByOtherRecordNotFound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_record_found"
        android:textSize="@dimen/text_24sp"
        android:visibility="gone" />
    <include
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/retryButtonLayout"
        layout="@layout/retry_button_layout"
        android:visibility="gone" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMostViewedByOther"
        android:background="@color/caldroid_lighter_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
