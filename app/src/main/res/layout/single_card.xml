<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="8dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_3dp">

                <com.mahindra.be_lms.util.CircularImageView
                    android:id="@+id/header_imageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eng"
                    app:border="true"
                    app:border_color="@color/white"
                    app:border_width="4dp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Vijay Kumavat shared 50th Mahindra Yellow belt at Mahindra Pune"
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/margin_size_3dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/postName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_3dp"
                android:gravity="left"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold"
                tools:text="PostName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/postBy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_size_3dp"
                    android:gravity="left"
                    android:textStyle="bold"
                    tools:text="Posted By: Vijay Kumavat" />
                <TextView
                    android:id="@+id/postOn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_size_3dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    tools:text="Posted By: Vijay Kumavat" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_click"
                android:layout_width="match_parent"
                android:layout_height="@dimen/videoHeight">

                <com.mahindra.be_lms.videosupport.AAH_VideoImage
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:id="@+id/img_playback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_pause"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/img_vol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_unmute"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="hello" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_3dp">

                <TextView
                    android:id="@+id/tv_likesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5k Likes"
                    android:layout_margin="@dimen/margin_size_3dp"/>

                <TextView
                    android:id="@+id/tv_commentsCount"
                    android:layout_margin="@dimen/margin_size_3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70 Comments"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_3dp">
                <!--<com.varunest.sparkbutton.SparkButton-->
                    <!--android:id="@+id/spark_button"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--app:sparkbutton_activeImage="@drawable/icn_like_fill"-->
                    <!--app:sparkbutton_inActiveImage="@drawable/icn_like"-->
                    <!--app:sparkbutton_iconSize="30dp"-->
                    <!--app:sparkbutton_primaryColor="@color/yellow"-->
                    <!--app:sparkbutton_secondaryColor="@color/header_color" />-->
                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/icn_like"/>-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Like"-->
                    <!--android:textSize="@dimen/text_size_16sp"-->
                    <!--android:layout_margin="@dimen/margin_size_3dp"/>-->
                <CheckBox
                    android:id="@+id/cb_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="Like"
                    android:onClick="onRadioButtonClicked"
                    android:button="@drawable/like_checkbox" />
                <LinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icn_comment"/>
                <TextView
                    android:layout_margin="@dimen/margin_size_3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/gray"
                    android:text="Comment"/>
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_delete"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icn_remove"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_margin="@dimen/margin_size_3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16sp"
                        android:textColor="@color/gray"
                        android:text="Delete Post"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>