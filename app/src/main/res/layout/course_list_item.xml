<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:padding="@dimen/padding_size_5dp"
        android:layout_marginTop="@dimen/layout_top_margin_8dp"
        android:layout_marginRight="@dimen/layout_top_margin_8dp"
        android:layout_marginLeft="@dimen/layout_top_margin_8dp"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp" >
        <!--android:foreground="?android:attr/selectableItemBackground"-->
        <!--android:clickable="true"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/courseName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Course 1"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_24sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/courseStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Not Started"
                android:layout_marginTop="5dp"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_16sp"
                />
            <TextView
                android:id="@+id/courseDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Description"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_16sp"
                />

            <TextView
                android:id="@+id/moreBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/moreText"
                android:textColor="@color/gray"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/hideBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/hideText"
                android:visibility="gone"
                android:textColor="@color/gray"
                android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:padding="6dp"
            android:layout_margin="@dimen/margin_size_3dp"
            android:id="@+id/btnLearnTest"
            style="@style/squre_round_filled_button_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="@string/learn_test_label"
            android:textSize="@dimen/text_16sp"
            android:textAppearance="@android:style/TextAppearance.Large" />
    </android.support.v7.widget.CardView>

</RelativeLayout>