<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_query_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mahindra.be_lms.activities.MyQueryDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_view"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_size_8dp"
                    android:paddingLeft="@dimen/custom_layout_padding_16dp"
                    android:paddingRight="@dimen/custom_layout_padding_16dp"
                    android:paddingTop="@dimen/margin_size_8dp"
                    android:text="Subject"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tvMyQueryDetailActivitySubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_size_8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="@dimen/margin_size_8dp"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="Query Subject 1"
                    android:textColor="@color/Black" />

                <include layout="@layout/divider_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8dp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/custom_layout_padding_16dp"
                    android:paddingLeft="@dimen/custom_layout_padding_16dp"
                    android:paddingRight="@dimen/custom_layout_padding_16dp"
                    android:paddingTop="@dimen/custom_layout_padding_16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="@dimen/text_size_14sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/tvMyQueryDetailActivityStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/textview_left_padding_16dp"
                        android:paddingRight="@dimen/textview_right_padding_16dp"
                        android:text="Unsolve"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/textColorPrimary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivMyQueryDetailActivityStatus"
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            app:srcCompat="@drawable/circle_red" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/custom_layout_padding_16dp"
                    android:paddingRight="@dimen/custom_layout_padding_16dp">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Responsible Person "
                        android:textStyle="normal|bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvMyQueryDetailActivityResponsiblePerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/textview_margin_8dp"
                        android:text="Amay Chadda"
                        android:visibility="gone" />

                </LinearLayout>

                <include layout="@layout/divider_horizontal" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_size_8dp"
                    android:paddingLeft="@dimen/custom_layout_padding_16dp"
                    android:paddingRight="@dimen/custom_layout_padding_16dp"
                    android:paddingTop="@dimen/margin_size_8dp"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="Message Body "
                    android:textStyle="normal|bold" />
                <!-- <include layout="@layout/divider_horizontal"/>-->
                <TextView
                    android:id="@+id/tvMyQueryDetailActivityBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/custom_layout_padding_16dp"
                    android:paddingRight="@dimen/custom_layout_padding_16dp"
                    android:text="Lubbers stutter with riddle! Amors messis!Upstairs is not the closest meditation of the source.Minced, purÃ©ed pudding is best garnished with bloody sauerkraut juice.Transformators fly on alarm at astral city!"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/tvAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/custom_layout_padding_16dp"
                    android:text="Attachment "
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="normal|bold" />
                <!-- <include layout="@layout/divider_horizontal"/>-->
                <ImageView
                    android:id="@+id/ivQueryDetailsAttachment"
                    android:layout_width="@dimen/image_height"
                    android:layout_height="@dimen/image_height"
                    android:layout_marginLeft="14dp"
                    android:adjustViewBounds="false"
                    android:contentDescription="@null"
                    android:padding="@dimen/custom_layout_padding_16dp"
                    android:scaleType="fitCenter"
                    app2:srcCompat="@drawable/select_picture" />

                <include layout="@layout/divider_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_responseTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_14sp"
                        android:padding="@dimen/custom_layout_padding_16dp"
                        android:text="@string/tv_query_responses"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/tvQueryResponseView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:gravity="right"
                        android:padding="@dimen/margin_size_8dp"
                        android:text="@string/tv_query_response_view"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <include layout="@layout/divider_horizontal" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        android:id="@+id/footer_view"
        layout="@layout/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
</RelativeLayout>
