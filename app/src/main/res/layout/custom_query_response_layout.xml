<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/llQueryResponseMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llQueryResponseAttachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="4dp"
            android:gravity="left"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvResponseAttachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attachment "
                android:textStyle="normal|bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivQueryResponseAttachment"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="false"
                android:contentDescription="@null"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/select_picture" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llQueryResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_image_post"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/user_new"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/margin_size_3dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvResponseTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Title"
                    android:textColor="@color/Black"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tvResponseMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:includeFontPadding="false"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/llQueryResponseDocumentLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivQueryResponseDocumentIcon"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:contentDescription="@null"
                            app:srcCompat="@drawable/unknown_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvQueryResponseDocumentLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Document Name"
                            android:textColor="@color/faintblue"
                            android:textSize="16sp"
                            android:textStyle="normal|bold" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvResponseResponsiblePerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Responsible person"
                    android:textColor="@color/grey_light"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llQueryReplyMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llQueryReplyAttachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="4dp"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvReplyAttachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attachment "
                    android:textStyle="normal|bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivQueryReplyAttachment"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="false"
                    android:contentDescription="@null"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/select_picture" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llQueryReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone"
                android:background="@drawable/replay_bubble"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="32dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvReplyTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="Title"
                        android:textColor="@color/text_color_white"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/tvReplyMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Message"
                        android:textColor="@color/text_color_white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvReplyResponsiblePerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="Responsible person"
                        android:textColor="@color/text_color_white"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/llQueryReplyDocumentLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/ivQueryReplyDocumentIcon"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/unknown_icon" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvQueryReplyDocumentLink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Document Name"
                                android:textColor="@color/white"
                                android:textStyle="normal|bold" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>