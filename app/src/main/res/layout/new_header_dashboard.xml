<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_color"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_color"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mahindra.be_lms.util.CircularImageView
                android:id="@+id/iv_header_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/user_new"
                app:border="true"
                app:border_color="@color/white"
                app:border_width="4dp" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.8"
                android:gravity="left"
                android:padding="@dimen/padding_size_5dp"
                android:text="Hi Vijay"
                android:textSize="@dimen/text_size_18sp" />

            <ImageView
                android:id="@+id/iv_side_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_size_8dp"
                android:visibility="invisible"
                android:src="@drawable/ic_menu" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>